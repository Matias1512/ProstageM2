{% extends 'base.html.twig' %}

{% block title %}Hello EntreprisesController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Détail Entreprise:</h1>

<div class="card">
    <h5 class="card-header">{{uneEntreprise.nom}}</h5>
    <div class="card-body">
        <h5 class="card-title">Adresse: {{uneEntreprise.adresse}}</h5><br>
        <h5 class="card-title">Activité: {{uneEntreprise.activite}} </h5><br>
        <h5 class="card-title">Site Web: {{uneEntreprise.siteWeb}} </h5>
    </div>
</div>
    
</div>
{% endblock %}