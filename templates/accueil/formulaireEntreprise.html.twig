{% extends 'base.html.twig' %}

{% block title %}Ajout Entreprise{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Ajout Entreprise</h1>
    {{ form_start(vueFormulaireEntreprise, {'attr': {'novalidate' : 'novalidate'}}) }}
    {{ form_row(vueFormulaireEntreprise.nom)}}
    {{ form_row(vueFormulaireEntreprise.adresse)}}
    {{ form_row(vueFormulaireEntreprise.activite)}}
    {{ form_row(vueFormulaireEntreprise.siteWeb)}}
    <button type="submit" class="btn btn-dark">Enregistrer</button>
    <br>
    {{ form_end(vueFormulaireEntreprise) }}
</div>

{% endblock %}