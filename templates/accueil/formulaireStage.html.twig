{% extends 'base.html.twig' %}

{% block title %}Ajout Entreprise{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Ajouter Stage</h1>
    {{ form_start(FormulaireStage, {'attr': {'novalidate' : 'novalidate'}}) }}
        {{ form_row(FormulaireStage.titre)}}
        {{ form_row(FormulaireStage.mission)}}
        {{ form_row(FormulaireStage.email)}}
        {{ form_row(FormulaireStage.entreprise)}}
        {{ form_row(FormulaireStage.formations)}}
        <button type="submit" class="btn btn-dark">Enregistrer</button>
    {{ form_end(FormulaireStage) }}
</div>

{% endblock %}