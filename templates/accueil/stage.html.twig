{% extends 'base.html.twig' %}

{% block title %}Hello StagesController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Stages Disponible: </h1>

    {% for stage in liste_stages %}
        <div class="card">
            <h5 class="card-header">{{stage.titre}}</h5>
            <div class="card-body">
                <h5 class="card-title">Mission: {{stage.mission}}</h5><br>
                <h5 class="card-title">Email {{stage.email}} </h5>
                <a href="{{ path('detailStage', {'id_stage': stage.id}) }}" class="btn btn-primary">Voir</a>
            </div>
        </div>    
    {% endfor %}


</div>
{% endblock %}