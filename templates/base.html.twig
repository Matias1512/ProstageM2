<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {# Run `composer require symfony/webpack-encore-bundle`
           and uncomment the following Encore helpers to start using Symfony UX #}
        {% block stylesheets %}
            <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
            {#{{ encore_entry_link_tags('app') }}#}
        {% endblock %}

        {% block javascripts %}
            {#{{ encore_entry_script_tags('app') }}#}
        {% endblock %}
    </head>
    <body>

        
        {% block nav %}
         <ul class="nav justify-content-center">
            <li class="nav-item">
                <a class="nav-link" href="/">Accueil</a>
            </li>
             <li class="nav-item">
                <a class="nav-link active" aria-current="page" href="/stages">Stage</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/entreprises">Entreprise</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/admin/formation/">Formation</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/admin/formulaireEntreprise">Ajout Entreprise</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/profile/Stage/ajouter">Ajout Stage</a>
            </li>

            {% if is_granted('IS_AUTHENTICATED_FULLY')%}
                <li class="nav-item">
                    <a class="nav-link" href="/logout">Se d√©connecter</a>
                </li>
            {% else %}
                <li class="nav-item">
                    <a class="nav-link" href="/inscription">S'inscrire</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/login">Se connecter</a>
                </li>
            {% endif %}

            {% if is_granted('ROLE_ADMIN')%}
                <li class="nav-item">
                    <a class="nav-link" href="/admin">Administrateur</a>
                </li>
            {% endif %}
        </ul>
        {% endblock %}

        {% block body %}{% endblock %}
    </body>
</html>
